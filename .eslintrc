{
  "extends":      ["eslint:recommended", "plugin:react/recommended"],
  "settings":     {
    "react":      {
      "version":  "detect",
    },
  },
  parserOptions:  {
    ecmaFeatures: {
      jsx:        true,
    },
    ecmaVersion:  2018,
    sourceType:   "module",
  },
  "rules":        {
    "no-undef":   off,
    }
}
